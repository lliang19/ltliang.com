{
  "strict": true,
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types",
      "src/lib/types",
    ],
    "types": [
      "vite/client",
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strict": false
  },
  "exclude": [
    "node_modules",
    ".eslintrc.js",
    "vite.config.ts",
  ],
  "include": [
    "src"
  ],
}